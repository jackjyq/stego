{
  "$schema": "https://opencode.ai/theme.json",
  "defs": {
    "black": "#{{ Ansi_0_Color.hex }}",
    "red": "#{{ Ansi_1_Color.hex }}",
    "green": "#{{ Ansi_2_Color.hex }}",
    "yellow": "#{{ Ansi_3_Color.hex }}",
    "blue": "#{{ Ansi_4_Color.hex }}",
    "magenta": "#{{ Ansi_5_Color.hex }}",
    "cyan": "#{{ Ansi_6_Color.hex }}",
    "white": "#{{ Ansi_7_Color.hex }}",
    "background": "#{{ Background_Color.hex }}",
    "foreground": "#{{ Foreground_Color.hex }}",
    "hint": "#{{ Hint_Text_Color.hex }}",
    "cursor": "#{{ Cursor_Color.hex }}",
    "selection": "#{{ Selection_Color.hex }}"
  },
  "theme": {
    "primary": "cyan",
    "secondary": "magenta",
    "accent": "cyan",
    "error": "red",
    "warning": "yellow",
    "success": "green",
    "info": "cyan",
    "text": "foreground",
    "textMuted": "hint",
    "background": "background",
    "backgroundElement": "none",
    "markdownText": "foreground",
    "markdownHeading": "green",
    "markdownLink": "foreground",
    "markdownLinkText": "yellow",
    "markdownCode":  "foreground",
    "markdownBlockQuote": "hint",
    "markdownEmph": "foreground",
    "markdownStrong": "foreground",
    "markdownListItem": "foreground",
    "markdownListEnumeration": "foreground",
    "markdownImage": "foreground",
    "markdownImageText": "yellow",
    "markdownCodeBlock":"foreground",
    "syntaxComment": "hint",
    "syntaxKeyword": "red",
    "syntaxFunction": "green",
    "syntaxVariable": "foreground",
    "syntaxString": "yellow",
    "syntaxNumber": "magenta",
    "syntaxType": "green",
    "syntaxOperator": "red",
    "syntaxPunctuation": "foreground"
  }
}